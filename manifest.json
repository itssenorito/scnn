{
  "manifest_version": 3,
  "name": "refresher",
  "version": "1.0",
  "description": "Clicks a specific button every 3 seconds on a website.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://freightpower.schneider.com/"],
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_title": "Refresher"
  }
}
